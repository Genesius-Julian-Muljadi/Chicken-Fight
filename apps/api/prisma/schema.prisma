generator client {
  provider = "prisma-client-js"
}

datasource db {
  // provider  = "postgresql"
  provider  = "mysql"
  url       = env("DATABASE_URL")
  // directUrl = env("DIRECT_URL")
}

enum Gender {
  Male
  Female
}

// Should only be filled by admin
model Users {
  id          Int      @id @default(autoincrement())
  name        String   @unique @db.VarChar(30)
  key         String   @unique
  password    String
  dateCreated DateTime @default(now())
  updated     DateTime @updatedAt
}

model Testimonials {
  id          Int      @id @default(autoincrement())
  testifier   String?  @db.VarChar(30)
  testimony   String   @db.Text
  dateCreated DateTime @default(now())
}

model Products {
  id          Int      @id @default(autoincrement())
  image       String
  promoted    Boolean?
  name        String   @db.VarChar(30)
  type        Gender
  overview    String?  @db.VarChar(50)
  desc        String?  @db.Text
  dateCreated DateTime @default(now())
  updated     DateTime @updatedAt
}
